# ==============================================
# PDQ Microservices Environment Configuration
# ==============================================

# Node environment
NODE_ENV=development

# ==============================================
# API Gateway Configuration
# ==============================================
API_PORT=3000
API_HOST=0.0.0.0
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=pdq_checkout

# Enable async checkout (delegates to microservices via Kafka)
# Set to "true" to use microservices architecture
# Set to "false" for legacy synchronous processing
USE_ASYNC_CHECKOUT=true

# ==============================================
# Orders Service Configuration
# ==============================================
ORDERS_PORT=3003
ORDERS_DATABASE_HOST=localhost
ORDERS_DATABASE_PORT=5435
ORDERS_DATABASE_USER=postgres
ORDERS_DATABASE_PASSWORD=postgres
ORDERS_DATABASE_NAME=pdq_orders
KAFKA_ORDERS_CONSUMER_GROUP=pdq-orders-dev
KAFKA_ORDERS_PAYMENT_CONSUMER_GROUP=pdq-orders-payment-dev

# ==============================================
# Payment Service Configuration
# ==============================================
PAYMENT_PORT=3002
PAYMENT_DATABASE_HOST=localhost
PAYMENT_DATABASE_PORT=5434
PAYMENT_DATABASE_USER=postgres
PAYMENT_DATABASE_PASSWORD=postgres
PAYMENT_DATABASE_NAME=pdq_payment
KAFKA_PAYMENT_CONSUMER_GROUP=pdq-payment-dev

# ==============================================
# Kafka/Redpanda Configuration
# ==============================================
KAFKA_BROKERS=localhost:19092

# ==============================================
# Frontend Configuration
# ==============================================
VITE_API_URL=http://localhost:3000/api
